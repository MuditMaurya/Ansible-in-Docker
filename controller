FROM alpine:latest

RUN apk update \
    && apk add openssh ansible vim \
    && mkdir /authorized_keys \
    && mkdir /etc/ansible \
    && touch /etc/ansible/hosts \
    && echo "[default]" >> /etc/ansible/ansible.cfg
    && echo "interpreter_python=auto_silent" >> /etc/ansible/ansible.cfg \
    && ssh-keygen -f ~/.ssh/id_rsa -N ''
